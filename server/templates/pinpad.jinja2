{% extends "base_page.jinja2" %}

{% set title = "Today's code" %}

{% block stylesheets %}
    {{ super() }}
    <link rel="stylesheet" href="static/pinpad.css">
{% endblock %}

{% block scripts %}
    {{ super() }}
    <script src="static/pinpad.js" defer></script>
{% endblock %}

{% block content %}
    <div id="wholepad">
        <div id="display_box">
            <input id="display" type="text" maxlength="6" disabled>
        </div>
        <div id="pinpad">
            <button id="btn_no1" type="button" class="pad_btn nr_btn" data-value="1"><span>1</span></button>
            <button id="btn_no2" type="button" class="pad_btn nr_btn" data-value="2"><span>2</span></button>
            <button id="btn_no3" type="button" class="pad_btn nr_btn" data-value="3"><span>3</span></button>
            <button id="btn_no4" type="button" class="pad_btn nr_btn" data-value="4"><span>4</span></button>
            <button id="btn_no5" type="button" class="pad_btn nr_btn" data-value="5"><span>5</span></button>
            <button id="btn_no6" type="button" class="pad_btn nr_btn" data-value="6"><span>6</span></button>
            <button id="btn_no7" type="button" class="pad_btn nr_btn" data-value="7"><span>7</span></button>
            <button id="btn_no8" type="button" class="pad_btn nr_btn" data-value="8"><span>8</span></button>
            <button id="btn_no9" type="button" class="pad_btn nr_btn" data-value="9"><span>9</span></button>
            <button id="btn_no0" type="button" class="pad_btn nr_btn" data-value="0"><span>0</span></button>
            <button id="btn_cancel" type="button" class="pad_btn"><span>X</span></button>
            <button id="btn_ok" type="button" class="pad_btn"><span><span style="transform: scaleX(1.3) rotate(-5deg) translate(-.15em, -.155em); position: absolute;">_</span>&gt;</span></button>
            <div class="pinpad_bg"></div>
        </div>
    </div>
{% endblock %}
